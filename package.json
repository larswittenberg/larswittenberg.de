{
  "name": "larswittenberg.de",
  "description": "My personal website built with Next.js & TailwindCSS",
  "version": "2.0.0",
  "author": {
    "name": "Lars Wittenberg",
    "url": "https://larswittenberg.de"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/larswittenberg/larswittenberg.de"
  },
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "dev": "next dev",
    "dev-https": "next dev -p 3001 & npx local-ssl-proxy --source 3000 --target 3001",
    "build": "next build",
    "start": "next start",
    "clean": "npx rimraf .next",
    "cleanAll": "rm -rf node_modules && rm yarn.lock",
    "lint": "next lint",
    "format": "prettier --write .",
    "export": "npx rimraf .next && next build && next export"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.8",
    "@tailwindcss/typography": "^0.5.15",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "classnames": "^2.5.1",
    "gray-matter": "^4.0.3",
    "next": "^15.1.1",
    "next-mdx-remote": "^5.0.0",
    "next-seo": "^6.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.8"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.1",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
